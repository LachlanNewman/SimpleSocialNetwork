<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane
        fx:id="mainScene"
        fx:controller="controllers.Controller"
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        styleClass="body"
        stylesheets="/css/landing.css"
        xmlns="http://javafx.com/javafx/8.0.121"
        xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="116.0" prefHeight="145.0" prefWidth="503.0">
            <children>
                <Text styleClass="h1-white" text="Welcome to the Simple Social Network" />
                <Button styleClass="button-white" text="Start Network" textFill="WHITE"
                    onAction="#navToNetwork"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
